<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="GB\PublisherBook\Api\PublisherRepositoryInterface" type="GB\PublisherBook\Model\PublisherRepository"/>
    <preference for="GB\PublisherBook\Api\Data\PublisherInterface" type="GB\PublisherBook\Model\Publisher"/>
    <preference for="GB\PublisherBook\Api\Data\PublisherSearchResultsInterface" type="Magento\Framework\Api\SearchResults"/>
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="PublisherBook_data_source" xsi:type="string">GB\PublisherBook\Model\ResourceModel\Publisher\Grid\Collection</item>
            </argument>
        </arguments>
    </type>
    <virtualType name="GB\PublisherBook\Model\ResourceModel\Publisher\Grid\Collection"
                 type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="resourceModel" xsi:type="string">GB\PublisherBook\Model\ResourceModel\Publisher\Collection</argument>
            <argument name="mainTable" xsi:type="string">gb_publisher_book</argument>
        </arguments>
    </virtualType>
    <type name="GB\PublisherBook\Model\ImageUploader">
        <arguments>
            <argument name="baseTmpPath" xsi:type="string">label/tmp/image</argument>
            <argument name="basePath" xsi:type="string">label/image</argument>
            <argument name="allowedExtensions" xsi:type="array">
                <item name="jpg" xsi:type="string">jpg</item>
                <item name="jpeg" xsi:type="string">jpeg</item>
                <item name="gif" xsi:type="string">gif</item>
                <item name="png" xsi:type="string">png</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Framework\Console\CommandListInterface">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="gb_publisherbook_import_book_publisher" xsi:type="object">
                    GB\PublisherBook\Console\Command\ImportBookPublisher
                </item>
            </argument>
        </arguments>
    </type>
</config>
